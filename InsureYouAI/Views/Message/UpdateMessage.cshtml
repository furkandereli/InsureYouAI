@model Message

@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Örnek Mesaj Düzenleme Sayfası</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="search">
            </form>
        </div>
        <form method="post">
            <input type="hidden" asp-for="MessageId" />
            <label>Gönderici Adı Soyadı</label>
            <input type="text" asp-for="NameSurname" class="form-control" />
            <br />
            <label>Gönderici Email Adresi</label>
            <input type="email" asp-for="Email" class="form-control" />
            <br />
            <label>Konu</label>
            <input type="text" asp-for="Subject" class="form-control" />
            <br />
            <label>Mesaj Detayı</label>
            <input type="text" asp-for="MessageDetail" class="form-control" />
            <br />
            <button class="btn btn-success">Mesajı Güncelle</button>
        </form>
    </div>
</div>